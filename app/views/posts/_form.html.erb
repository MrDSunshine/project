<%= if @post.errors.any? %>
<h2>The following errors prevented the post from getting created</h2>
<ul>
	<%= @post.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<div class='row'>
	<div class='col-xs-12'>
		<%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :title %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of post", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
				<div class="col-sm-8">
					<%= f.text_area :description, row: 10, class: "form-control", placeholder: "Body of post" %>
				</div>
			</div>
			<div class ="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to posts listing", posts_path %> ]
		</div>
	</div>
</div>