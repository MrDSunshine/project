<div class="page-header">
  <h1><%= @post.title %></h1>
</div>

<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
        <li>Created by: <%= link_to @post.user.username, @post.user %></li>
        <li><%= link_to gravatar_for(@post.user), @post.user %></li>
      </div>
    </div>
  </ul>

  <h4 class="text-center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format @post.description %></p>

  <% if @post.categories.any? %>
    <p>Categories: <%= render @post.categories %></p>
  <% end %>

  <div class="post-actions">
    <% if logged_in? && (current_user?(@post.user) || current_user.admin?) %>
      <%= link_to 'Edit this Post', edit_post_path(@post), class: 'btn btn-xs btn-primary' %>
      <%= link_to 'Delete this Post', post_path(@post), method: :delete,
                  data: { confirm: 'Are you sure that you want to delete this post?' },
                  class: 'btn btn-xs btn-danger' %>
    <% end %>
    <%= link_to 'View all Posts', post_path, class: 'btn btn-xs btn-success' %>
  </div>
</div>
